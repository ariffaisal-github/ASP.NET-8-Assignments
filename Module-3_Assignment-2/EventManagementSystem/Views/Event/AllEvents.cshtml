@model List<EventViewModel>
@{
    ViewData["Title"] = "All Events";
}

<div class="text-center mb-4">
    <h2>All Events</h2>
    <p class="text-muted">Here you can see both past and upcoming events.</p>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Address</th>
            <th>Assigned User</th>
            <th>Event Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model) {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Description</td>
                <td>@ev.Date.ToString("MMMM dd, yyyy")</td>
                <td>@ev.Address</td>
                <td>@ev.AssignedUserName</td>
                <td>@ev.EventType</td>
            </tr>
        }
    </tbody>
</table>